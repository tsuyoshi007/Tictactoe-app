<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="#fddede">

    <TableLayout android:layout_width="match_parent" android:layout_height="500dp"
                 android:id="@+id/game"
                 android:gravity="center"
                 app:layout_constraintTop_toTopOf="parent"
                 app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                 android:weightSum="3">
        <TableRow android:weightSum="3" android:layout_weight="1">
            <Button android:text="" android:textSize="50dp" android:layout_width="match_parent" android:layout_height="match_parent"
                    android:layout_weight="1" android:background="@drawable/shape" android:id="@+id/button1" android:onClick="buttonClick"/>
            <Button android:text="" android:textSize="50dp" android:layout_width="match_parent" android:layout_height="match_parent"
                    android:layout_weight="1" android:background="@drawable/shape" android:id="@+id/button2" android:onClick="buttonClick"/>
            <Button android:text="" android:textSize="50dp" android:layout_width="match_parent" android:layout_height="match_parent"
                    android:layout_weight="1" android:background="@drawable/shape" android:id="@+id/button3" android:onClick="buttonClick"/>
        </TableRow>
        <TableRow android:weightSum="3" android:layout_weight="1">
            <Button android:text="" android:textSize="50dp" android:layout_width="match_parent" android:layout_height="match_parent"
                    android:layout_weight="1" android:background="@drawable/shape" android:id="@+id/button4" android:onClick="buttonClick"/>
            <Button android:text="" android:textSize="50dp" android:layout_width="match_parent" android:layout_height="match_parent"
                    android:layout_weight="1" android:background="@drawable/shape" android:id="@+id/button5" android:onClick="buttonClick"/>
            <Button android:text="" android:textSize="50dp" android:layout_width="match_parent" android:layout_height="match_parent"
                    android:layout_weight="1" android:background="@drawable/shape" android:id="@+id/button6" android:onClick="buttonClick"/>
        </TableRow>
        <TableRow android:weightSum="3" android:layout_weight="1">
            <Button android:text="" android:textSize="50dp" android:layout_width="match_parent" android:layout_height="match_parent"
                    android:layout_weight="1" android:background="@drawable/shape" android:id="@+id/button7" android:onClick="buttonClick"/>
            <Button android:text="" android:textSize="50dp" android:layout_width="match_parent" android:layout_height="match_parent"
                    android:layout_weight="1" android:background="@drawable/shape" android:id="@+id/button8" android:onClick="buttonClick"/>
            <Button android:text="" android:textSize="50dp" android:layout_width="match_parent" android:layout_height="match_parent"
                    android:layout_weight="1" android:background="@drawable/shape" android:id="@+id/button9" android:onClick="buttonClick"/>
        </TableRow>
    </TableLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="50dp"
                  app:layout_constraintTop_toBottomOf="@+id/game" android:gravity="center">
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="New Game" android:textSize="20sp" android:id="@+id/newGameButton"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>